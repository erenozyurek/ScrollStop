rules_version = '2';

// ScrollStop Firestore Security Rules
// Her kullanıcı sadece kendi verisine erişebilir

service cloud.firestore {
  match /databases/{database}/documents {

    // ─── Yardımcı fonksiyon ───
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ─── 1. Users ───
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId)
                    && request.resource.data.email is string
                    && request.resource.data.displayName is string;
      allow update: if isOwner(userId)
                    // subscriptionType sadece backend/Cloud Function ile değişmeli
                    && !('subscriptionType' in request.resource.data
                         && request.resource.data.subscriptionType != resource.data.subscriptionType);
    }

    // ─── 2. Products ───
    match /products/{productId} {
      allow read: if isAuthenticated()
                  && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.productName is string;
      allow update: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;
    }

    // ─── 3. Captions ───
    match /captions/{captionId} {
      allow read: if isAuthenticated()
                  && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.productId is string
                    && request.resource.data.text is string;
      allow delete: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;
    }

    // ─── 4. Videos ───
    match /videos/{videoId} {
      allow read: if isAuthenticated()
                  && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.productId is string;
      allow update: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;
    }

    // ─── 5. AI Jobs ───
    match /ai_jobs/{jobId} {
      allow read: if isAuthenticated()
                  && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.jobType in ['caption', 'video'];
      // AI job güncellemesi sadece backend tarafından yapılmalı
      allow update: if false;
      allow delete: if false;
    }

    // ─── 6. Subscriptions ───
    match /subscriptions/{subscriptionId} {
      allow read: if isAuthenticated()
                  && resource.data.userId == request.auth.uid;
      // Abonelik oluşturma/güncelleme sadece backend/Cloud Function ile yapılmalı
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}
